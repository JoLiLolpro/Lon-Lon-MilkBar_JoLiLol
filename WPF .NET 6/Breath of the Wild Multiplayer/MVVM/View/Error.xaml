<Window x:Class="Errorpopup.Error"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Error"
        Height="165" Width="330" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Le TextBlock sans le Run -->
        <TextBlock 
            x:Name="MessageText" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            TextWrapping="Wrap" 
            Width="290" 
            TextAlignment="Center" Margin="0,39,0,0"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button x:Name="OkButton" Content="OK" Width="75" Margin="5" Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
