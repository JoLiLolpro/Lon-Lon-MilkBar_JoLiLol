<Window x:Class="PythonCheckerApp.PythonWarning"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Info"
        Height="165" Width="330" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock 
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,13,0,0" TextWrapping="Wrap" Width="226" RenderTransformOrigin="0.499,0.259"><Run Text="Python is installed via the Microsoft Store,"/><Run Text=" the mod may not work properly."/></TextBlock>
        <TextBlock 
           HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Width="226" RenderTransformOrigin="0.499,0.259"><Run Text="Niko recommends you download it from the python website."/></TextBlock>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button x:Name="OkButton" Content="OK" Width="75" Margin="5" Click="OkButton_Click"/>
            <Button x:Name="DontShowButton" Content="Don't show again" Width="120" Margin="5" Click="DontShowButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
